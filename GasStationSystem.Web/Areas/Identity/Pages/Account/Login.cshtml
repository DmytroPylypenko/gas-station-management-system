@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="auth-wrapper">
    <div class="auth-card">
        <div class="auth-header">
            <div class="mb-3">
                <i class="fa-solid fa-gas-pump fa-3x text-primary"></i>
            </div>
            <h2>Welcome Back</h2>
            <p class="text-muted">Please enter your details to sign in</p>
        </div>

        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" id="loginEmail" type="email" autocomplete="email" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" for="loginEmail">Email address</label>
                <span asp-validation-for="Input.Email" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" id="loginPassword" type="password" autocomplete="current-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password" for="loginPassword">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger small"></span>
            </div>

            <div class="d-flex justify-content-between align-items-center mb-4">
                <div class="form-check">
                    <input class="form-check-input" asp-for="Input.RememberMe" id="rememberMe" />
                    <label class="form-check-label text-muted small" asp-for="Input.RememberMe" for="rememberMe">
                        Remember me
                    </label>
                </div>
                <a id="forgot-password" asp-page="./ForgotPassword" class="text-decoration-none small fw-bold">Forgot password?</a>
            </div>

            <button id="login-submit" type="submit" class="btn btn-primary-custom btn-lg mb-3">
                Sign In
            </button>

            <div class="text-center text-muted small">
                Don't have an account? 
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="fw-bold text-decoration-none">Sign up</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}