@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="auth-wrapper">
    <div class="auth-card">
        <div class="auth-header">
            <div class="mb-3">
                <i class="fa-solid fa-user-plus fa-3x text-warning"></i>
            </div>
            <h2>Create Account</h2>
            <p class="text-muted">Join GasStation System today</p>
        </div>

        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" id="regEmail" type="email" autocomplete="email" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" for="regEmail">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" id="regPass" type="password" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password" for="regPass">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-4">
                <input asp-for="Input.ConfirmPassword" class="form-control" id="regPassConfirm" type="password" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.ConfirmPassword" for="regPassConfirm">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
            </div>

            <button id="registerSubmit" type="submit" class="btn btn-primary-custom btn-lg mb-3">
                Sign Up
            </button>

            <div class="text-center text-muted small">
                Already have an account? 
                <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="fw-bold text-decoration-none">Log in</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}