@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}

<div class="auth-wrapper">
    <div class="auth-card">
        <div class="auth-header">
            <div class="mb-3">
                <i class="fa-solid fa-lock-open fa-3x text-warning"></i>
            </div>
            <h2>Reset Password</h2>
            <p class="text-muted">Set a new secure password</p>
        </div>

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3" role="alert"></div>
            
            <input asp-for="Input.Code" type="hidden" />

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" id="resetEmail" type="email" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" for="resetEmail" class="form-label">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" id="resetPass" type="password" autocomplete="new-password" aria-required="true" placeholder="Please enter your password." />
                <label asp-for="Input.Password" for="resetPass" class="form-label">New Password</label>
                <span asp-validation-for="Input.Password" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-4">
                <input asp-for="Input.ConfirmPassword" class="form-control" id="resetPassConfirm" type="password" autocomplete="new-password" aria-required="true" placeholder="Please confirm your password." />
                <label asp-for="Input.ConfirmPassword" for="resetPassConfirm" class="form-label">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100 py-2 fw-bold">Set New Password</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}