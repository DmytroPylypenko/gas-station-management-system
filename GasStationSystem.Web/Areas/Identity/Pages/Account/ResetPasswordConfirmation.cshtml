@page
@model ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Reset password confirmation";
}

<div class="auth-wrapper">
    <div class="auth-card text-center">
        <div class="mb-4">
            <i class="fa-solid fa-check-circle fa-3x text-success"></i>
        </div>
        <h2 class="h3 mb-3">Password Reset!</h2>
        <p class="text-muted">
            Your password has been reset. You can now log in.
        </p>
        <a asp-page="./Login" class="btn btn-primary w-100 mt-3 fw-bold">Click here to Log in</a>
    </div>
</div>