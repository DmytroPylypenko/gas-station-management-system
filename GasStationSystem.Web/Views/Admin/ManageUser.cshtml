@model GasStationSystem.Web.Models.UserWithRolesViewModel
@{
    ViewData["Title"] = "Manage Roles";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-3">
                    <h4 class="mb-0">Manage Roles for <span class="text-primary">@Model.Email</span></h4>
                </div>
                <div class="card-body p-4">
                    <form method="post">
                        <input type="hidden" name="userId" value="@Model.UserId" />
                        
                        <div class="mb-4">
                            <p class="fw-bold mb-3">Select Roles:</p>
                            @foreach (var role in Model.AllRoles)
                            {
                                <div class="form-check mb-2">
                                    <input class="form-check-input" type="checkbox" name="roles" value="@role" id="role_@role"
                                           @(Model.Roles.Contains(role ?? "") ? "checked" : "")>
                                    <label class="form-check-label" for="role_@role">
                                        @role
                                    </label>
                                </div>
                            }
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Users" class="btn btn-outline-secondary">Cancel</a>
                            <button type="submit" class="btn btn-success px-4">Save Changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>