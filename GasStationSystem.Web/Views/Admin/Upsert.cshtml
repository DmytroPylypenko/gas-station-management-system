@model GasStationSystem.Web.Models.Product

@{
    ViewData["Title"] = Model.Id == 0 ? "Create Product" : "Edit Product";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-3">
                    <h4 class="mb-0">@(Model.Id == 0 ? "Create Product" : "Edit Product")</h4>
                </div>
                <div class="card-body p-4">
                    <form method="post" asp-action="Upsert">
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label asp-for="Name" for="productName" class="form-label fw-bold">Product Name</label>
                            <input asp-for="Name" id="productName" class="form-control" placeholder="e.g. Diesel Euro" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" for="productDesc" class="form-label">Description</label>
                            <textarea asp-for="Description" id="productDesc" class="form-control" rows="2"></textarea>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Price" for="productPrice" class="form-label fw-bold">Price</label>
                                <input asp-for="Price" id="productPrice" class="form-control" type="number" step="0.01" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="StockQuantity" for="productStock" class="form-label fw-bold">Stock Quantity</label>
                                <input asp-for="StockQuantity" id="productStock" class="form-control" type="number" />
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Type" for="productType" class="form-label fw-bold">Category</label>
                                <select asp-for="Type" id="productType" asp-items="Html.GetEnumSelectList<ProductType>()" class="form-select"></select>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="ImageUrl" for="productImage" class="form-label">Image URL</label>
                                <input asp-for="ImageUrl" id="productImage" class="form-control" placeholder="https://..." />
                            </div>
                        </div>

                        <div class="d-flex justify-content-end mt-4">
                            <a asp-action="Products" class="btn btn-outline-secondary me-2">Cancel</a>
                            <button type="submit" class="btn btn-primary px-4">Save Product</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}