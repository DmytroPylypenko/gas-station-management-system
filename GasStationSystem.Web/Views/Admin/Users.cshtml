@model IEnumerable<GasStationSystem.Web.Models.UserWithRolesViewModel>
@{
    ViewData["Title"] = "User Management";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="h3 text-primary"><i class="fa-solid fa-users-gear me-2"></i>User Management</h2>
        </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">Email</th>
                        <th>Roles</th>
                        <th class="text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td class="ps-4 fw-bold">@user.Email</td>
                            <td>
                                @foreach (var role in user.Roles)
                                {
                                    var badgeColor = role == "Admin" ? "bg-danger" : (role == "Cashier" ? "bg-primary" : (role == "Barista" ? "bg-warning text-dark" : "bg-secondary"));
                                    <span class="badge @badgeColor me-1">@role</span>
                                }
                            </td>
                            <td class="text-end pe-4">
                                <a asp-action="ManageUser" asp-route-userId="@user.UserId" class="btn btn-sm btn-outline-dark me-2">
                                    <i class="fa-solid fa-user-tag"></i> Roles
                                </a>
                                <form asp-action="DeleteUser" asp-route-userId="@user.UserId" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure? This action cannot be undone.');">
                                        <i class="fa-solid fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>