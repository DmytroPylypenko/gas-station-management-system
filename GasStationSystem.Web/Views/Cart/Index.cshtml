@model GasStationSystem.Web.Models.CartViewModel

@{
    ViewData["Title"] = "Shopping Cart";
}

<div class="container py-4">
    <h2 class="h4 mb-4">Shopping Cart</h2>

    @if (!Model.Items.Any())
    {
        <div class="text-center py-5 bg-white rounded shadow-sm border">
            <i class="fa-solid fa-cart-arrow-down fa-3x text-muted mb-3"></i>
            <h5 class="text-muted">Your cart is currently empty.</h5>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">Browse Catalog</a>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-lg-8">
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-body p-0">
                        <table class="table table-hover mb-0 align-middle">
                            <thead class="bg-light text-muted small text-uppercase">
                                <tr>
                                    <th class="ps-4">Product</th>
                                    <th>Price</th>
                                    <th>Quantity</th>
                                    <th>Total</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Items)
                                {
                                    <tr>
                                        <td class="ps-4">
                                            <div class="d-flex align-items-center">
                                                <div class="rounded bg-light d-flex align-items-center justify-content-center me-3" style="width: 48px; height: 48px;">
                                                    <img src="@item.ImageUrl" alt="@item.ProductName" style="max-width: 100%; max-height: 100%;">
                                                </div>
                                                <span class="fw-500">@item.ProductName</span>
                                            </div>
                                        </td>
                                        <td class="text-muted">@item.Price.ToString("C")</td>
                                        <td>
                                            <span class="badge bg-light text-dark border">@item.Quantity</span>
                                        </td>
                                        <td class="fw-bold">@item.Total.ToString("C")</td>
                                        <td class="text-end pe-4">
                                            <a asp-action="Remove" asp-route-id="@item.ProductId" class="text-danger">
                                                <i class="fa-solid fa-times"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0">Order Summary</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">Subtotal</span>
                            <span class="fw-bold">@Model.GrandTotal.ToString("C")</span>
                        </div>
                        <div class="d-flex justify-content-between mb-4">
                            <span class="text-muted">Tax (0%)</span>
                            <span>$0.00</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between mb-4">
                            <span class="h5">Total</span>
                            <span class="h5 fw-bold text-primary">@Model.GrandTotal.ToString("C")</span>
                        </div>
                        
                        <a asp-action="Checkout" class="btn btn-primary w-100 py-2 fw-bold">
                            Proceed to Checkout
                        </a>
                        
                        <a asp-action="Clear" class="btn btn-link text-muted w-100 mt-2 text-decoration-none small">
                            Clear Cart
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>