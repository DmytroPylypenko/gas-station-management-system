@model GasStationSystem.Web.Models.CartViewModel

@{
    ViewData["Title"] = "Your Cart";
}

<div class="container mt-4">
    <h2 class="mb-4"><i class="fa-solid fa-cart-shopping text-primary"></i> Shopping Cart</h2>

    @if (!Model.Items.Any())
    {
        <div class="alert alert-info text-center py-5">
            <h4>Your cart is empty</h4>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">Go Shopping</a>
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <table class="table table-hover mb-0 align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Product</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Total</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <img src="@item.ImageUrl" alt="@item.ProductName" class="rounded me-3" style="width: 50px; height: 50px; object-fit: cover;">
                                        <span class="fw-bold">@item.ProductName</span>
                                    </div>
                                </td>
                                <td>@item.Price.ToString("C")</td>
                                <td>
                                    <span class="badge bg-secondary rounded-pill">@item.Quantity</span>
                                </td>
                                <td class="fw-bold">@item.Total.ToString("C")</td>
                                <td>
                                    <a asp-action="Remove" asp-route-id="@item.ProductId" class="btn btn-sm btn-outline-danger">
                                        <i class="fa-solid fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="card-footer bg-white d-flex justify-content-between align-items-center py-3">
                <div>
                    <a asp-action="Clear" class="btn btn-outline-secondary btn-sm">Clear Cart</a>
                </div>
                <div class="text-end">
                    <h4 class="mb-2">Total: <span class="text-success fw-bold">@Model.GrandTotal.ToString("C")</span></h4>
                    <a asp-action="Checkout" class="btn btn-success btn-lg shadow">
                        Proceed to Checkout <i class="fa-solid fa-arrow-right ms-2"></i>
                    </a>
                </div>
            </div>
        </div>
        <div class="mt-3">
            <a asp-controller="Home" asp-action="Index" class="text-decoration-none">
                <i class="fa-solid fa-arrow-left"></i> Continue Shopping
            </a>
        </div>
    }
</div>