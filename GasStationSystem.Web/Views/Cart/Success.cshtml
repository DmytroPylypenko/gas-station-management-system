@model int
@{
    ViewData["Title"] = "Order Confirmed";
}

<div class="container text-center py-5">
    <div class="mb-4">
        <i class="fa-solid fa-circle-check text-success" style="font-size: 80px;"></i>
    </div>
    
    <h1 class="display-5 fw-bold text-success">Thank You!</h1>
    <p class="lead">Your order <span class="fw-bold">#@Model</span> has been placed successfully.</p>
    <p class="text-muted">Our barista allows creating magic specifically for you!</p>

    <div class="mt-5">
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg">
            <i class="fa-solid fa-house"></i> Return to Catalog
        </a>
    </div>
</div>